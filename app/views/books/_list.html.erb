 <p id="notice"></p>
 <div class="col-xs-3">
      <h2>User info</h2>
      <table class="table">
        <tbody>
        <tr>
        <th><%= attachment_image_tag user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></th>
      </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
        </tbody>
      </table>
       <div class="row">
      <%= link_to edit_user_path(@user) do %>
        <span class= "btn btn-default glyphicon glyphicon-wrench"></span>
      <% end %>
      </div>
      <h2>New book</h2>
       <%= form_for(book) do |f| %>
<!-- エラーメッセージ記載する -->

<!-- ここまで -->
        <div class="field row">
          <label for="book_title">Title</label>
           <%= f.text_field :title %>
        </div>
        <div class="field row">
          <label for="book_opinion">Opinion</label>
           <%= f.text_area :body %>
        </div>
        <div class="actions row">
          <%= f.submit 'Create Book' ,class:"btn btn-primary col-xs-12" %>
        </div>
        <% end %>
    </div>