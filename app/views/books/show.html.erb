<% if flash[:notice] %>
 <div class="flash">
   <%= flash[:notice] %>
 </div>
 <% end %>

  <div class="container">
    <div class="row">

<div class="col-xs-3">
      <h2>User info</h2>
      <img class="">
      <table class="table">
        <tbody>
        <tr>
          <th><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></th>
        </tr>
        <tr>
          <th>name</th>
          <th><%= @user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= @user.introduction %></th>
        </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(@user) do %>
        <span class= "btn btn-default glyphicon glyphicon-wrench"></span>
        <% end %>
      </div>
      <h2>New Book</h2>
       <%= form_for(@bbook) do |f| %>
        <div class="field row">
          <label for="book_title">Title</label>
           <%= f.text_field :title %>
        </div>
        <div class="field row">
          <label for="book_opinion">Opinion</label>
           <%= f.text_area :body %>
        </div>
        <div class="actions row">
          <%= f.submit 'Create Book' ,class:"btn btn-primary col-xs-12" %>
        </div>
        <% end %>
    </div>

    <div class="col-xs-9">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@user.id) do %><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br><%= @user.name %><% end %></td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
             <% if current_user == @book.user %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger" %></td>
            <% end %>

          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>