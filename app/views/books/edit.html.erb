

    <!-- ボディ -->
    <div class="body">
    	<div class="container">
<!-- エラー文 -->
        <% if @book.errors.any? %>
　　　　　<div class="error_explanation">
　　　　　<h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
　　　　　<ul>
           <% @book.errors.full_messages.each do |book| %>
           <li><%= book %></li>
           <% end %>
         </ul>
　　　　　</div>
　　　　　<% end %>
<!-- ここまで -->
    		<p id="notice"></p>
    		<div class="row">
    			<div class="col-md-6 col-md-offset-3">
    				<h1>Editing Book</h1>
    				<%= form_for(@book, uel:"/books/#{@book.id}") do |f| %>

    				<div class="field row">
    					<label for="book_title">Title</label>
    					<%= f.text_field :title %>
    				</div>

    				<div class="field row">
    					<label for="book_opinion">Opinion</label>
    					<%= f.text_area :body %>
    				</div>

    				<div class="action">
    					<%= f.submit 'Update Book',class:"btn btn-primary" %>
    				</div>
    				<% end %>
    				<%= link_to "Show", book_path , class:"button" %> |
    				<%= link_to "Back", books_path, class:"button" %>
    			</div>
    		</div>
    	</div>
    </div>

