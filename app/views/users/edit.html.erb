<% if @user.errors.any? %>
　　　　　<div class="error_explanation">
	　　　　　<h2><%= @user.errors.count %> errors prohibited this obj from being saved:</h2>
	　　　　　<ul>
		<% @user.errors.full_messages.each do |user| %>
		<li><%= user %></li>
		<% end %>
	</ul>
　　　　　</div>
　　　　　<% end %>

<div class="body">
	<div class="container">
		<p id="notice"></p>
		<h2>User info</h2>
		<%= form_for(@user, uel:"/users/#{@user.id}") do |f| %>
		<div class="field">
			<label for="user_name">Name</label>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<label for="user_image">Image</label>
			<%= f.attachment_field :profile_image %>
		</div>
		<div class="field">
			<label for="user_introduction">Introduction</label>
			<%= f.text_area :introduction %>
		</div>
		<div class="actions">
			<%= f.submit 'Update User',class:"btn btn-default" %>
			<% end %>
		</div>
	</div>
</div>